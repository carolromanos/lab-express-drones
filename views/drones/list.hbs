<h2>Available drones</h2>


    {{#each drones}}
    <h3>{{this.name}}</h3>
    <ul>
         <li>Number of propellers: {{ this.propellers }} </li>
         <li> Maximum speed: {{ this.maxSpeed }}m/s </li>

    </ul>
    <a href='../drones/{{this.id}}/edit'>Edit</a>

    <form action="/drones/{{this.id}}/delete" method="POST">
      <button type="submit">Delete</button>
    </form>

    {{/each}}


